{
  "$schema": "https://oxc.rs/schema.json",
  "rules": {
    "no-console": "warn",
    "no-debugger": "error",
    "no-unused-vars": "error",
    "no-undef": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "warn",
    "no-duplicate-imports": "error"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["vue", "typescript"],
  "extends": ["plugin:vue/vue3-recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
